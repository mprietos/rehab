{
  "buildCommand": "cd client && npm install --include=dev && npm run build && cd ../api && npm install",
  "outputDirectory": "client/dist",
  "rewrites": [
    {
      "source": "/health",
      "destination": "/api/server"
    },
    {
      "source": "/api/:path*",
      "destination": "/api/server"
    }
  ],
  "functions": {
    "api/server.js": {
      "memory": 1024,
      "maxDuration": 10
    }
  }
}