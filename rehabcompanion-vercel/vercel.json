{
  "version": 2,
  "buildCommand": "cd client && npm install --include=dev && npm run build && cd ../api && npm install && npx prisma generate",
  "outputDirectory": "client/dist",
  "rewrites": [
    {
      "source": "/health",
      "destination": "/api/index.js"
    },
    {
      "source": "/api/(.*)",
      "destination": "/api/index.js"
    },
    {
      "source": "/(.*)",
      "destination": "/index.html"
    }
  ]
}